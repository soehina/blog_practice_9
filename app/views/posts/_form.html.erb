<%= form_with(model: post, local: true) do |form| %>
  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title,value:@post.title %>
  </div>

  <div class="field">
    <%= form.label :記事内容 %>
    <%= form.text_area :content,value:@post.content %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
